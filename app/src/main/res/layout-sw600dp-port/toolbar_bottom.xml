<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tb_bottom"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@color/primaryColor"
    android:clipChildren="true"
    android:elevation="4dp"
    android:foregroundGravity="center"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/Theme.MyThemeBottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_nome_musica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:textColor="@color/branco"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/iv_volume_down"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@drawable/volume_down"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_stop"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_volume_down"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@drawable/btn_action_stop"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_player"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_stop"
            android:foreground="?actionBarItemBackground"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_volume_up"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_player"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@drawable/volume_up"
            android:layout_weight="1" />


    </RelativeLayout>


</android.support.v7.widget.Toolbar>

